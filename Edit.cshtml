@{
    ViewData["Title"] = "Edit RFQ";
}

@model Rfq

<div class="w-full max-w-md mx-auto bg-white rounded-xl shadow-lg p-6 my-8">
    <h1 class="text-2xl font-bold mb-4">Edit RFQ</h1>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-4">
            <label asp-for="RfqId" class="block text-gray-700 text-sm font-semibold mb-2"></label>
            <input asp-for="RfqId" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="RfqId" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Item" class="block text-gray-700 text-sm font-semibold mb-2"></label>
            <input asp-for="Item" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Item" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Quantity" class="block text-gray-700 text-sm font-semibold mb-2"></label>
            <input asp-for="Quantity" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Quantity" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="DueDate" class="block text-gray-700 text-sm font-semibold mb-2"></label>
            <input asp-for="DueDate" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="DueDate" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Status" class="block text-gray-700 text-sm font-semibold mb-2"></label>
            <select asp-for="Status" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option value="Pending">Pending</option>
                <option value="Approved">Approved</option>
                <option value="Rejected">Rejected</option>
            </select>
            <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex justify-end space-x-2 mt-6">
            <a asp-action="Rfq" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-lg focus:outline-none transition-all">
                Cancel
            </a>
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:ring-4 focus:ring-blue-300 transition-all">
                Save Changes
            </button>
        </div>
    </form>
</div>